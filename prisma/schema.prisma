generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PermitStatus {
  SUBMITTED
  UNDER_REVIEW
  APPROVED
  REJECTED
}

model PermitApplication {
  id           String        @id @default(uuid())
  citizenId    String
  businessName String
  permitType   String
  status       PermitStatus  @default(SUBMITTED)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([status])
  @@index([citizenId])
}
